html
  head
    link(rel='stylesheet', type='text/css', href='/assets/fluid.css')
  body
    #overlay-box.overlay
        .wrapper
            span ALERT
    #toptext #{stateMachine.show}
    #clock.clocks
      canvas#canvas(width='500', height='500')
    ul#box
        if stateMachine.box1 
            li#box1(class=stateMachine.box1.state === "on" ? "on" : "")
                span #{stateMachine.box1.text}
        if stateMachine.box2 
            li#box2(class=stateMachine.box2.state === "on" ? "on" : "")
                span #{stateMachine.box2.text}
        if stateMachine.box3 
            li#box3(class=stateMachine.box3.state === "on" ? "on" : "")
                span #{stateMachine.box3.text}
        if stateMachine.box4 
            li#box4(class=stateMachine.box4.state === "on" ? "on" : "")
                span #{stateMachine.box4.text}
    #bottomtext #{stateMachine.song}
    script(data-main='/js/fluid', src='/js/vendor/require.js')